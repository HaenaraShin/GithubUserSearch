<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/edt_search"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dip"
        android:hint="@string/hint_input_search"
        android:maxLines="1"
        android:inputType="text"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_empty"
        android:layout_width="0dip"
        android:layout_height="0dip"
        app:layout_constraintTop_toBottomOf="@id/edt_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        tools:visibility="visible">
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="100dip"
            android:layout_height="100dip"
            app:layout_constraintTop_toTopOf="@id/cl_empty"
            app:layout_constraintLeft_toLeftOf="@id/cl_empty"
            app:layout_constraintRight_toRightOf="@id/cl_empty"
            android:layout_marginTop="240dip"
            android:tint="#666666"
            android:src="@drawable/ic_search_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_search"
            app:layout_constraintLeft_toLeftOf="@id/iv_search"
            app:layout_constraintRight_toRightOf="@id/iv_search"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/guide_search_user"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        app:layout_constraintTop_toBottomOf="@id/edt_search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginBottom="4dip"
        />

</androidx.constraintlayout.widget.ConstraintLayout>