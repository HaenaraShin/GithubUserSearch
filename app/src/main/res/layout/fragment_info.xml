<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:layout_marginBottom="300dip"
        android:src="@drawable/haenara"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textColor="#0e0e0e"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile" />

    <TextView
        android:id="@+id/tv_developed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:text="Developed by"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Haenara Shin"
        android:textColor="#0e0e0e"
        app:layout_constraintTop_toBottomOf="@+id/tv_developed" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:gravity="center"
        android:text="hamster12345@gmail.com"
        android:layout_marginTop="20dip"
        />

    <TextView
        android:id="@+id/tv_github"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        android:gravity="center"
        android:text="https://github.com/HaenaraShin"
        android:layout_marginTop="4dip"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Â© 2020. HaenaraShin All rights reserved."
        android:gravity="center"
        android:layout_marginBottom="22dip"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>